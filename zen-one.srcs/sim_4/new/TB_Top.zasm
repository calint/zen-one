# rom intended for test bench
#  compile with 'zasm'
#
    ldi 0x0001 r1       # r1=0x0001
    ldi 0xffff r2       # r2=0xffff
    cp r1 r3            # r3=r1 == 0x0001
    add r2 r3           # r3+=r1 == 0
    ifp call err         # if(r3>0) jmp
    ifn call err         # if(r3<0) jmp

done:
    ledi 0b0001
    jmp done


@ 0xfff0 err: func
    loop:
        ledi 0b1111
        jmp loop
endfunc
